description		"the Nagios Remote Plugin Executor"

oom score -800
setuid <%= @user %>
setgid <%= Etc.getgrgid(Etc.getpwnam(@user).gid).name %>

start on (local-filesystems and net-device-up IFACE!=lo)
stop on runlevel [!2345]

expect fork

respawn

exec <%= @command %>
